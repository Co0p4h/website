---
const links = [
    ['about', '/about/'],
    ['thoughts', '/blog/'],
    ['tags', '/tags/'],
];

---
<nav>
    <a href="/"><h1>coopa</h1></a>
    <div class="links">
        {links.map((link) => (
            <a href={link[1]}>{link[0]}</a>
        ))}
    </div>
</nav>

<style>
    a {
        text-decoration: none;
    }
    nav {
        height: 5rem;
        /* position: fixed; */
        top: 0;
        display: flex;
        align-items: center;
        padding: 0.2rem 2rem;
        justify-content: space-between;
    }
    h1 {
        color: #000;
        font-size: 2.5rem;
        font-weight: 600;
        letter-spacing: -0.05rem;
        margin: 0;
    }
    .links {
        display: flex;
        align-items: center;
    }
    .links a {
        color: #000;
        /* font-family: 'Times New Roman', Times, serif; */
        cursor: pointer;
        margin: 0 1rem;

    }
</style>