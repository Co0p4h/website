---
import { CollectionEntry, getCollection } from 'astro:content';
import BlogPostLayout from '../../layouts/BlogPostLayout.astro';

interface Props {
  blog_post: CollectionEntry<'blog'>;
}

// 1. Generate a new path for every collection blog post
export async function getStaticPaths() {
  const all_posts = await getCollection('blog');
  return all_posts.map(blog_post => ({
    params: { slug: blog_post.slug }, props: blog_post,
    // params: { slug: blog_post.slug }, props:  { blog_post },
  }));
}

const blog_post = Astro.props;
// const {blog_post} = Astro.props;

const { Content } = await blog_post.render();
---
<!-- <BlogPostLayout frontmatter={blog_post.data}> -->
<BlogPostLayout {...blog_post.data}>
  <Content />
</BlogPostLayout>
